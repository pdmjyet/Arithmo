			<directory>src/main/resources/</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>*.json</include>
			</includes>
		</fileSet>
		<fileSet>
			<includes>
				<include>*.config</include>
			</includes>
		</fileSet>
	</fileSets>	

</assembly>
